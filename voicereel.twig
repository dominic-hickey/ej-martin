{% extends "layout.twig" %}

{% block content %}

<div class="page-content  page-content--voicereel">
    <div class="container">

        <div class="page-title-blocks">
            <div class="row  row--gutters">
                <div class="col  col--half">
                    <div class="block  block--red">
                        <div class="block-content">
                            <h2>Voicereel</h2>
                            {{widget('content', 'voicereel-text1', { content:'
                                <p>Listen to a selection of my voice clips here.</p>
                            '})|raw}}
                        </div>
                    </div>
                </div>
                <div class="col  col--half">
                    <div class="block  block--image">
                        {{widget('image', 'voicereel-image1', {
                          'src': asset('/images/title-image--voicereel.jpg')
                        })|raw}}
                    </div>
                </div>
            </div>
        </div>

        <div class="divider">
           <img src="{{asset('images/divider.png')}}" alt=""/>
        </div>


        <!-- Voicereels -->
        <div class="voicereel-blocks">
            <div class="row  row--gutters">

                <!-- Zone -->
                <div class="zone-content">
                    {{zone('main')|raw}}
                </div>

            </div>
        </div>

    </div>
</div>


{% endblock %}
